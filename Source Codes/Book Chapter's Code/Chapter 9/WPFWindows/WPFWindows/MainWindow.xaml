<Window x:Class="WPFWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FirstWindow" Height="300" Width="300">
    <Grid>
        <Button Height="23" Width="100"  Name="ChangeLocation"  Click="ChangeLocation_Click" 
 VerticalAlignment="Top" HorizontalAlignment="Left" 
 Margin="15,20,0,0">ChangeLocation</Button>
        <Button Height="23" Width="100" Name="AutoFit"  Click="AutoFit_Click" 
 VerticalAlignment="Top" Margin="15,60,0,0" HorizontalAlignment="Left" >AutoFit</Button>
        <Button Height="23" Width="100" Name="ChangeBorder" Click="ChangeBorder_Click" 
 Margin="15,100,0,0"  VerticalAlignment="Top"  
 HorizontalAlignment="Left">ChangeBorder</Button>
        <Button Height="23" Width="100" Name="AnotherWindow" Click="AnotherWindow_Click" 
 Margin="15,140,0,0" VerticalAlignment="Top" 
 HorizontalAlignment="Left">AnotherWindow</Button>
        <Button Height="23" Width="100" Name="Exit" Click="Exit_Click" Margin="15,180,0,0" 
 VerticalAlignment="Top" HorizontalAlignment="Left">Exit</Button>

    </Grid>
</Window>
