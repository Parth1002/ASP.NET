<Window x:Class="Album.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="EditWindow" Height="600" Width="600" Background="Pink" 
		Foreground="Maroon"
>
    <Grid>
        <Image Name="showImage"  Height="500" Width="500" Margin="40,10,60,60" />
        <Button Name="Back" Content="Go Back" Height="30" Width="50" 
			Margin="0,500,200,0" Click="Back_Click" />
        <Button Name="Exit" Content="Exit" Height="30" Width="50" 
			Margin="200,500,0,0" Click="Exit_Click" />

    </Grid>
</Window>
