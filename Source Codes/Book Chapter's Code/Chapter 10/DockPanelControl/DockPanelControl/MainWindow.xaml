<Window x:Class="DockPanelControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel LastChildFill="True">
            <Border Height="30" Background="Pink" DockPanel.Dock="Top">
                <TextBlock> 1st DockPanel</TextBlock>
            </Border>
            <Border Height="30" Background="SkyBlue" DockPanel.Dock="Top">
                <TextBlock> 2nd DockPanel</TextBlock>
            </Border>
            <Border Height="70" Background="Lavender" DockPanel.Dock="Bottom">
                <TextBlock> 3rd DockPanel</TextBlock>
            </Border>
            <Border Height="200" Width="100" Background="SeaGreen" DockPanel.Dock="Left">
            </Border>
            <Border Height="100" Background="BlueViolet" DockPanel.Dock="Right">
            </Border>
        </DockPanel>
    </Grid>
</Window>
