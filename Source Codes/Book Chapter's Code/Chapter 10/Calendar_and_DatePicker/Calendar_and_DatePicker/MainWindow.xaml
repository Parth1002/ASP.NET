<Window x:Class="Calendar_and_DatePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        
        <Calendar Height="170" HorizontalAlignment="Left" Margin="12,65,0,0" Name="calendar1" VerticalAlignment="Top" Width="180" SelectionMode="MultipleRange">
            <Calendar.BlackoutDates>
                <CalendarDateRange Start="5/1/2010" End="5/10/2010"/>
            </Calendar.BlackoutDates>
        </Calendar>
        
        <DatePicker Height="25" HorizontalAlignment="Left" Margin="240,65,0,0" Name="datePicker1" VerticalAlignment="Top" Width="243" FirstDayOfWeek="Monday" SelectedDateFormat="Long" />
        <Label Content="Calendar" Height="28" HorizontalAlignment="Left" Margin="73,12,0,0" Name="label1" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" />
        <Label Content="DatePicker" Height="28" HorizontalAlignment="Left" Margin="334,12,0,0" Name="label2" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" />
    </Grid>
</Window>
