<Window x:Class="SpecialCharacters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="300">
    <Grid Height="263">
        <TextBox Height="23" Margin="0,13,53,0" Name="textBox1" VerticalAlignment="Top">
            &lt; is the Less than symbol.
        </TextBox>
        <TextBox Height="23" Margin="0,50,53,0" Name="textBox2" VerticalAlignment="Top">
            &gt; is the Greater than symbol.
        </TextBox>
        <TextBox Margin="0,87,53,152" Name="textBox3">
            &amp; is the Ampersand symbol.
        </TextBox>
        <TextBox Height="23" Margin="0,0,53,107" Name="textBox4" 
		 VerticalAlignment="Bottom">
            &quot;Representing the Double Quote&quot;
        </TextBox>
    </Grid>
</Window>
