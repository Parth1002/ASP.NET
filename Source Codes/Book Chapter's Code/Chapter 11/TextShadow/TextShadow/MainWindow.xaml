<Window x:Class="TextShadow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Width="300" Height="157">
    <Grid Height="123">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="99*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Soft Shadow" Foreground="Red" FontSize="30" Margin="0,-8,0,3" Grid.ColumnSpan="3">
		<TextBlock.BitmapEffect>
		<DropShadowBitmapEffect ShadowDepth="4" Direction="330" Color ="Black" 
		 Opacity="0.7" Softness="0.25" />
		</TextBlock.BitmapEffect>
        </TextBlock>
        <TextBlock Text="Hard Shadow" Foreground="Maroon" FontSize="30" 
		 VerticalAlignment="Center" Grid.ColumnSpan="3" Margin="0,34">
		<TextBlock.BitmapEffect>
		<DropShadowBitmapEffect ShadowDepth="9" Direction="135" Color="Maroon" 
		 Opacity="0.3" Softness="0"/>
		</TextBlock.BitmapEffect>
        </TextBlock>

    </Grid>
</Window>
