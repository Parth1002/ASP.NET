<Window x:Class="FlowDocument.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="240" Width="300">
    <Grid>
        <FlowDocumentReader>
            <FlowDocument FontSize="13">
                <Paragraph>This is the first paragraph.
                </Paragraph>
                <Paragraph>This is the second paragraph.
                </Paragraph>
                <Paragraph>This is the third paragraph.
                </Paragraph>
                <BlockUIContainer>
                    <Button Height="20"/>
                </BlockUIContainer>
                <Paragraph>You can move to the next page.
                </Paragraph>
                <Paragraph>This is also a content.
                </Paragraph>
            </FlowDocument>
        </FlowDocumentReader>
    </Grid>
</Window>
